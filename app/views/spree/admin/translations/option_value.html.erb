<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:editing_option_value) %> <span class="green">"<%= @option_value.name %>"</span>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_option_value_list), spree.edit_admin_option_type_path(@option_value.option_type), :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @option_value } %>
<div class="row">
  <fieldset class="no-border-top translations">
    <%= render 'settings' %>
    <% debugger %>
    <%= form_for [:admin,:option_type, @resource] do |f| %>
      <%= render 'form_fields', f: f %>
      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    <% end %>
  </fieldset>
</div>

