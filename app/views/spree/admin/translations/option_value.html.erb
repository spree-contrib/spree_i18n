<% content_for :page_title do %>
  <%= Spree.t(:editing_option_value) %> <span class="green">"<%= @option_value.name %>"</span>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_option_value_list), spree.edit_admin_option_type_path(@option_value.option_type), class: 'btn-primary', icon: 'arrow-left' %>
<% end %>

<div class="row translations">
  <div class="col-md-4">
    <%= render 'settings' %>
  </div>
  <div class="col-md-8">
    <%= form_for [:admin,:option_type, @resource] do |f| %>
      <%= render 'form_fields', f: f %>
      <div class="form-actions" data-hook="buttons">
        <%= button Spree.t('actions.update'), 'update' %>
        <span class="or"><%= Spree.t(:or) %></span>
        <%= button_link_to Spree.t('actions.cancel'), spree.edit_admin_option_type_path(@option_value.option_type), icon: 'remove' %>
      </div>
    <% end %>
  </div>
</div>
